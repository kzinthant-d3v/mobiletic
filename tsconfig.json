{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@screens": ["src/screens"],
      "@components": ["src/components"],
      "@utils": ["src/utils"],
      "@contexts/*": ["src/contexts/*"],
      "@config/*": ["src/config/*"],
      "@assets/*": ["assets/*"]
    },
    "typeRoots": [
      // "src/customTypings",
      "node_modules/@types"
    ]
  }
}
